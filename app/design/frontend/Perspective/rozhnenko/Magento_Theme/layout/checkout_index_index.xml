<?xml version="1.0"?>
<!-- Variant CMS Block in checkout without backend -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="checkout.custom.cms.block" destination="checkout.cms.blocks"/>
        <move element="checkout.custom.cms.block2" destination="checkout.cms.blocks"/>

        <block class="Magento\Cms\Block\Block" name="checkout.custom.cms.block">
            <arguments>
                <argument name="block_id" xsi:type="string">checkout_custom</argument>
            </arguments>
        </block>
        <block class="Magento\Cms\Block\Block" name="checkout.custom.cms.block2">
            <arguments>
                <argument name="block_id" xsi:type="string">checkout_block_2</argument>
            </arguments>
        </block>

        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="before-form" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="customBlock" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Magento_Checkout/js/view/cms-block-html</item>
                                                                    <item name="template" xsi:type="string">Magento_Checkout/cms-block-html</item>
                                                                    <item name="block_id" xsi:type="string">checkout_custom</item>
                                                                    <item name="deps" xsi:type="array">
                                                                        <item name="0" xsi:type="string">cmsBlocksProvider</item>
                                                                    </item>
                                                                </item>
                                                                <item name="customBlock2" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Magento_Checkout/js/view/cms-block-html</item>
                                                                    <item name="template" xsi:type="string">Magento_Checkout/cms-block-html</item>
                                                                    <item name="block_id" xsi:type="string">checkout_block_2</item>
                                                                    <item name="deps" xsi:type="array">
                                                                        <item name="0" xsi:type="string">cmsBlocksProvider</item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
